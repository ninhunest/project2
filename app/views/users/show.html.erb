<div class="container">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>Microposts (<%= @user.posts.count %>)</h3>
        <ol class="content">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>
