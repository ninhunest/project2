<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="col-lg-12">
      <div class="post-preview">
        <a href="post.html">
          <h2 class="post-title">
            <%= t("title") %>
          </h2>
          <h3 class="post-subtitle">
            <%= t("content") %>
          </h3>
        </a>
        <p class="post-meta">
          <%= t("posted_by") %>
          <%= link_to t("start_bootstrap"),"#" %>
          <%= t("created") %>
        </p>
      </div>
      <hr>
      <div class="clearfix">
        <%= link_to t("older_posts"),"#", class: "btn btn-primary float-right" %>
      </div>
    </div>
  </div>
</div>
<hr>
