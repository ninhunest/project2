<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="col-lg-12">
      <%= form_for Post.new do |f| %>
        <div class="form-group">
          <%= f.label :title, t("title") %><br \>
          <%= f.text_field :title, placeholder: t("title"), class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :content, t("content") %><br \>
          <%= f.cktext_area :content, placeholder: t("content") %>
        </div>

        <div class="form-group">
          <%= f.label :picture, t("picture") %>
          <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png"  %>
        </div>

        <div class="form-group">
          <%= f.label :list_tags, t("tags") %>
          <%= f.text_field :list_tags, placeholder: t("tags"),
            class: "form-control", id: "tm-input" %>
        </div>

        <div class="form-group">
          <%= f.submit t("post"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
